{
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "WebSearch",
      "Bash(cat:*)",
      "Bash(tree:*)",
      "Bash(chmod:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(npm:*)",
      "Bash(node:*)",
      "Bash(npx:*)",
      "Bash(tsc:*)",
      "Bash(vitest:*)",
      "Bash(eslint:*)",
      "Bash(prettier:*)",
      "Bash(uv:*)",
      "Bash(python:*)",
      "Bash(pytest:*)",
      "Bash(ruff:*)",
      "Bash(mypy:*)",
      "Bash(flake8:*)",
      "Bash(make:*)",
      "Skill(cleanup-branches)",
      "Skill(commit)",
      "Skill(commit-pr)",
      "Skill(commit-push)",
      "Skill(fix)",
      "Skill(lint)",
      "Skill(proofread)",
      "Skill(secrets)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read|Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/block-secrets.sh",
            "async": true,
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/python-test-lint.sh",
            "async": true,
            "timeout": 30
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/js-test-lint.sh",
            "async": true,
            "timeout": 45
          }
        ]
      }
    ]
  }
}