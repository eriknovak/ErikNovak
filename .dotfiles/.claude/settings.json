{
  "permissions": {
    "allow": [
      "WebSearch",

      "Bash(cat:*)",
      "Bash(tree:*)",
      "Bash(chmod:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",

      "Bash(git:*)",
      "Bash(gh:*)",

      "Bash(npm:*)",
      "Bash(node:*)",
      "Bash(npx:*)",
      "Bash(tsc:*)",
      "Bash(vitest:*)",
      "Bash(eslint:*)",
      "Bash(prettier:*)",

      "Bash(uv:*)",
      "Bash(python:*)",
      "Bash(pytest:*)",
      "Bash(ruff:*)",
      "Bash(mypy:*)",
      "Bash(flake8:*)",

      "Bash(make:*)",

      "Skill(cleanup-branches)",
      "Skill(commit)",
      "Skill(commit-pr)",
      "Skill(commit-push)",
      "Skill(fix)",
      "Skill(lint)"
    ]
  },
  "enabledPlugins": {
    "ralph-wiggum@claude-code-plugins": true
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/python-test-lint.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/js-test-lint.sh",
            "timeout": 45
          }
        ]
      }
    ]
  }
}